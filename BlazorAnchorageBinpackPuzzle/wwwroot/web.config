<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Serve static content for Blazor WASM -->
    <staticContent>
      <!-- Custom MIME types -->
      <mimeMap fileExtension=".pdb" mimeType="application/octet-stream" />
      <mimeMap fileExtension=".blat" mimeType="application/octet-stream" />
    </staticContent>

    <!-- URL Rewrite rules -->
    <rewrite>
      <rules>

        <!-- Reverse proxy to ESA API -->
        <rule name="ReverseProxyESA" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="https://esa.instech.no/api/{R:1}" logRewrittenUrl="true" />
        </rule>

        <!-- SPA fallback for client-side routing -->
        <rule name="SPA Fallback" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Exclude Blazor framework and static resources -->
            <add input="{REQUEST_URI}" pattern="^/_framework/" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.js$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.css$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.wasm$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.dll$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.pdb$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.ico$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.png$" negate="true" />
            <add input="{REQUEST_URI}" pattern="\.jpg$" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.html" />
        </rule>

      </rules>
    </rewrite>

    <!-- Forward HTTPS header for reverse proxy -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Forwarded-Proto" value="https" />
      </customHeaders>
    </httpProtocol>

  </system.webServer>
</configuration>
